rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Contact form submissions - anyone can create, only authenticated users can read
    match /contacts/{contactId} {
      // Allow anyone to create a contact submission
      allow create: if true;
      
      // Only allow reading if authenticated (for admin access)
      allow read: if request.auth != null;
      
      // Validate data on create
      allow create: if request.resource.data.keys().hasAll(['name', 'email', 'message', 'timestamp'])
                    && request.resource.data.name is string
                    && request.resource.data.email is string
                    && request.resource.data.email.matches('.*@.*')
                    &&request.resource.data.message is string
                    && request.resource.data.timestamp is timestamp;
    }
  }
}
